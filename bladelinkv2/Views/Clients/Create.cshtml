@model bladelinkv2.Models.Client

@{
    ViewBag.Title = "Register";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h2>Register</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        First name
                        @Html.PasswordFor(m => m.Fname, new { @class = "form-control", @placeholder = "Jean" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.PasswordFor(m => m.Name, new { @class = "form-control", @placeholder = "Dupont" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Jean.Dupont@outlook.com" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.password)
                        @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Adress)
                        @Html.PasswordFor(m => m.Adress, new { @class = "form-control", @placeholder = "1, avenue du pont" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Register" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
                @if (Session["id"] != null && int.Parse(Session["id"].ToString()) == 2)
                {
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
